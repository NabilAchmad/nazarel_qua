// prisma/schema.prisma
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
}

model Produk {
  id        Int      @id @default(autoincrement())
  nama      String
  deskripsi String?
  harga     Decimal  @db.Decimal(15,2)
  gambarUrl String?
  createdAt DateTime @default(now())
}

model Pendapatan {
  id         Int      @id @default(autoincrement())
  userId     Int
  tanggal    DateTime
  jumlah     Decimal  @db.Decimal(15,2)
  keterangan String
}

model Pengeluaran {
  id         Int      @id @default(autoincrement())
  userId     Int
  tanggal    DateTime
  jumlah     Decimal  @db.Decimal(15,2)
  keterangan String
}

model Testimoni {
  id        Int      @id @default(autoincrement())
  nama      String
  pekerjaan String?  // Contoh: Ibu Rumah Tangga, Mahasiswa (Opsional)
  rating    Int      @default(5)
  komentar  String
  createdAt DateTime @default(now())
}

model BlacklistWord {
  id        Int      @id @default(autoincrement())
  word      String   @unique
  createdAt DateTime @default(now())
}